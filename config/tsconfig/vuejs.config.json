{
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "preserve",
    "types": ["vite/client"],
    "strict": true,
    "declaration": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": ".",
    "sourceMap": true,
    "esModuleInterop": true
  }
}
