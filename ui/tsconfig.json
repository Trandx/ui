{
  "extends": "@nucle-x/config/tsconfig/vuejs.config.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "paths": {
      "@/*": ["src/*"]
    },
    //"jsx": "preserve",
    "baseUrl": ".",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "dist/*"]
  },
  "include": ["src/**/**.ts", "src/**/**.vue", "src/**/**.ext", "src/**/**.*.ts", "src/**/**.*.vue", "src/**/**.*.ext"],
  "exclude": ["src/main.ts", "src/App.vue", "src/plugin"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
