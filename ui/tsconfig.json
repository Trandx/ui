{
  "extends": "@nucle-x/config/tsconfig/vuejs.config.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "paths": {
      "@/*": ["src/*"]
    },
    //"jsx": "preserve",
    "baseUrl": ".",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "dist/*", "types/*"]
  },
  "include": ["src/**/**.ts", "src/**/**.d.ts", "src/**/*.vue", "src/**/*.ext", "src/components/atoms/input/utils/select-data.utils.ts", "src/components/atoms/input/utils/search.utils.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
