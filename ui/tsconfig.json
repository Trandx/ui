{
  "extends": "@nucle-x/config/tsconfig/vuejs.config.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": ".",
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "dist/*"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
